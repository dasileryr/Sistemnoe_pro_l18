<Window x:Class="UserMonitorApp.ReportViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр отчета" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,10"/>
        
        <TextBox x:Name="ContentTextBox" Grid.Row="1" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 FontSize="12"/>
        
        <Button Content="Закрыть" Grid.Row="2" 
                Click="CloseButton_Click" 
                Padding="20,8" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0"/>
    </Grid>
</Window>

